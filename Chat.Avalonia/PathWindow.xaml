<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="Chat.Avalonia.PathWindow"
        Title="Path" Width="400" Height="30">
        <DockPanel Width="NaN">
                <TextBox x:Name="Path"
                         HorizontalAlignment="Center"
                         Width="280"
                         Height="22"
                         Watermark="Path" 
                         Text="{Binding Path=PathToFile, 
                         Mode=TwoWay}"/>
                <Button x:Name="BrowseBtn"
                        Content="Browse..."
                        Height="30" 
                        Width="60"/>
                <Button x:Name="OkBtn"
                        Content="OK"
                        Height="30" 
                        Width="60"/>
        </DockPanel>
</Window>
